<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_constrian_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danielluzgarten.androidhomework.ConstrianLayout2">

    <TextView
        android:text="RED"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:id="@+id/textView"
        android:background="@android:color/holo_red_dark"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline" />

    <TextView
        android:text="ORANGE"
        android:layout_width="55dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:id="@+id/textView2"
        android:background="@android:color/holo_orange_dark"
        android:autoText="false"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:text="YELLOW"
        android:layout_width="68dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:id="@+id/textView5"
        android:background="@android:color/holo_orange_light"
        android:autoText="false"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <TextView
        android:text="GREEN"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:id="@+id/textView6"
        android:background="@android:color/holo_green_light"
        android:autoText="false"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:text="BLUE"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:id="@+id/textView8"
        android:background="@android:color/holo_blue_dark"
        android:autoText="false"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintLeft_toLeftOf="@+id/textView6" />

    <TextView
        android:text="INDIGO"
        android:layout_width="60dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:id="@+id/textView9"
        android:background="@color/colorAccent"
        android:autoText="false"
        android:textColor="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintLeft_toLeftOf="@+id/textView8" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:id="@+id/textView7"
        android:background="@android:color/holo_purple"
        android:autoText="false"
        tools:text="VIOLET"
        android:text="VIOLET"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintLeft_toLeftOf="@+id/textView9" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.16583748" />

</android.support.constraint.ConstraintLayout>
